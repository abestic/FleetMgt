<h1>Listing facilities</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address 1</th>
    <th>Address 2</th>
    <th>City</th>
    <th>State id</th>
    <th>Postal code</th>
    <th>Station id</th>
    <th>Carrier id</th>
    <th>Routing notes</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @facilities.each do |facility| %>
  <tr>
    <td><%= facility.Name %></td>
    <td><%= facility.Address_1 %></td>
    <td><%= facility.Address_2 %></td>
    <td><%= facility.City %></td>
    <td><%= facility.State_ID %></td>
    <td><%= facility.Postal_Code %></td>
    <td><%= facility.Station_ID %></td>
    <td><%= facility.Carrier_ID %></td>
    <td><%= facility.Routing_Notes %></td>
    <td><%= facility.Active %></td>
    <td><%= link_to 'Show', facility %></td>
    <td><%= link_to 'Edit', edit_facility_path(facility) %></td>
    <td><%= link_to 'Destroy', facility, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

